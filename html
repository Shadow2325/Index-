  <script>
    // Simple confetti + hearts animation and typed message
    const confettiCanvas = document.getElementById('confetti');
    const ctx = confettiCanvas.getContext('2d');
    let W, H;
    function resize(){ W = confettiCanvas.width = confettiCanvas.offsetWidth; H = confettiCanvas.height = confettiCanvas.offsetHeight }
    addEventListener('resize', resize); resize();

    // particles
    const particles = [];
    function rand(min,max){return Math.random()*(max-min)+min}
    function makeConfetti(x,y){ for(let i=0;i<60;i++){ particles.push({x, y, vx:rand(-6,6), vy:rand(-10,-2), size:rand(6,12), rot:rand(0,360), vr:rand(-6,6), hue:rand(330,360) }) } }

    function step(){ ctx.clearRect(0,0,W,H); for(let i=particles.length-1;i>=0;i--){ const p=particles[i]; p.x+=p.vx; p.y+=p.vy; p.vy+=0.36; p.rot+=p.vr; ctx.save(); ctx.translate(p.x,p.y); ctx.rotate(p.rot*Math.PI/180); ctx.fillStyle='hsl('+p.hue+',85%,60%)'; ctx.fillRect(-p.size/2,-p.size/2,p.size,p.size*0.6); ctx.restore(); if(p.y>H+50||p.x<-50||p.x>W+50) particles.splice(i,1); } requestAnimationFrame(step) }
    requestAnimationFrame(step);

    // heart pulse
    const heart = document.getElementById('heart');
    heart.addEventListener('click',()=>{ heart.classList.add('beat'); setTimeout(()=>heart.classList.remove('beat'),600); makeConfetti(W/2,H/3); playTone() })

    // buttons
    const msg = document.getElementById('msg');
    document.getElementById('openBtn').addEventListener('click',()=>{ msg.classList.add('show'); makeConfetti(W/2,H/3); typeLove(); playMelody() })
    document.getElementById('secretBtn').addEventListener('click',()=>{ // a little secret
      revealSecret()
    })

    // typed message
    const fullText = "I love you soo much. You are my favourite person in the whole wide world. Thank you for being YOU. ‚ù§Ô∏è";
    async function typeLove(){ msg.textContent=''; for(let i=0;i<fullText.length;i++){ msg.textContent += fullText[i]; await new Promise(r=>setTimeout(r,22 + (i%6))); } msg.classList.add('show') }

    // secret: small heart rain + playful message
    function revealSecret(){ makeConfetti(W/2,H/2); msg.textContent = "Psst... one more thing: let's make tomorrow special. Meet me at 7?"; msg.classList.add('show'); playTone(440,0.08); }

    // tiny web audio helpers
    const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
    function playTone(freq=520,dur=0.12){ const o = audioCtx.createOscillator(); const g = audioCtx.createGain(); o.type='sine'; o.frequency.value=freq; g.gain.value=0.04; o.connect(g); g.connect(audioCtx.destination); o.start(); o.stop(audioCtx.currentTime + dur); }

    function playMelody(){ const notes=[520,640,780,880,780,640,520]; let t=0; notes.forEach((n,i)=>{ setTimeout(()=>playTone(n,0.12), t*140); t++; }) }

    // friendly deploy hint: allow page to be loaded without JS errors if audio blocked
    document.addEventListener('click',()=>{ if(audioCtx.state==='suspended') audioCtx.resume() },{once:true})

    // small accessibility: focus open button on load
    window.requestAnimationFrame(()=>document.getElementById('openBtn').focus())
  </script>
